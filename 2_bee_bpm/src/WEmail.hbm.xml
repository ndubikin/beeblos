<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.beeblos.bpm.core.model.WEmailAccount" table="w_user_email_accounts">
		<id name="id" type="java.lang.Integer">
			<column name="id" />
			<generator class="identity" />
		</id>
		<property generated="never" lazy="false" name="name" type="string">
			<column name="name">
				<comment>Reference name in the email direction</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="userDefaultAccount"
			type="java.lang.Boolean">
			<column name="user_default_account" sql-type="bit">
				<comment>The default account, only one should be true</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="email" type="string">
			<column length="150" name="email" not-null="true">
				<comment>email</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="replyTo" type="string">
			<column length="150" name="reply_to">
				<comment>reply email direction / if empty take the email field</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="signatureText"
			type="string">
			<column name="signature_text" />
		</property>
		<property generated="never" lazy="false" name="signatureTxt"
			type="text">
			<column name="signature_txt" />
		</property>
		<property generated="never" lazy="false" name="signatureHtml"
			type="text">
			<column name="signature_html" />
		</property>
		<property generated="never" lazy="false" name="signatureFile"
			type="string">
			<column name="signature_file" />
		</property>
		<property generated="never" lazy="false" name="inputServerType"
			type="string">
			<column length="20" name="input_server_type">
				<comment>default POP</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="inputServerName"
			type="string">
			<column length="100" name="input_server_name" />
		</property>
		<property generated="never" lazy="false" name="inputPort"
			type="java.lang.Integer">
			<column name="input_port" />
		</property>
		<property generated="never" lazy="false" name="connectionSecurity"
			type="string">
			<column length="20" name="connection_security" not-null="true">
				<comment>None, SATRTTLS or SSL/TLS</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="identificationMethod"
			type="string">
			<column length="20" name="identification_method" not-null="true">
				<comment>Insecure transmited password, encode password,
					kergeros/GSSAPI, NTLM</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="format" type="string">
			<column length="10" name="format">
				<comment>Text, HTML</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="outputServerName"
			type="string">
			<column name="output_server_name">
				<comment>Output server name</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="outputServer"
			type="string">
			<column name="output_server">
				<comment>output server id . for example: smtp.softpoint.org</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="outputPort"
			type="java.lang.Integer">
			<column name="output_port" not-null="true">
				<comment>Default 25</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="outputConnectionSecurity"
			type="string">
			<column length="10" name="output_connection_security">
				<comment>None, STARTTLS, SSL/TLS</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="outputIdentificationMethod"
			type="string">
			<column length="1" name="output_identification_method">
				<comment>"S" without identification, "I" insercure transmision, "C"
					encode password, "K"erteros /GSSAPI, "N"TLM</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="outputUserName"
			type="string">
			<column length="40" name="output_user_name" />
		</property>
		<property generated="never" lazy="false" name="outputPassword"
			type="string">
			<column length="20" name="output_password">
				<comment>no risky output accounts</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="idExchange"
			type="string">
			<column length="50" name="id_exchange">
				<comment>conection with exchange ...</comment>
			</column>
		</property>
		<many-to-one class="org.beeblos.bpm.core.model.WUserDef"
			lazy="false" fetch="join" name="wUserDef">
			<column name="id_user" />
		</many-to-one>
	</class>
	
	<class name="com.sp.common.core.model.UserEmailAccount" table="usuario_cuentas_email">
		<id name="id" type="java.lang.Integer">
			<column name="id_uce" />
			<generator class="identity" />
		</id>
		<property generated="never" lazy="false" name="userId"
			type="java.lang.Integer">
			<column name="id_usuario" not-null="true">
				<comment>id usuario de la tabla de usuarios</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="preferred"
			type="java.lang.Boolean">
			<column name="preferida" sql-type="bit">
				<comment>Si est√° en true indica que es la cuenta preferida de ese
					usuario</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="name"
			type="string">
			<column name="uce_nombre">
				<comment>Nombre que debe aparecer en la referencia de la direcci</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="email"
			type="string">
			<column   name="uce_email" not-null="true">
				<comment>email</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="replyTo"
			type="string">
			<column   name="uce_direccion_de_respuesta">
				<comment>email de respuesta / si esta vacio deberia tomarse el de
					arriba</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="uceTextoDeLaFirma"
			type="string">
			<column name="uce_texto_de_la_firma" />
		</property>
		<property generated="never" lazy="false" name="signatureText"
			type="text">
			<column name="uce_firma_adjunta_txt" />
		</property>
		<property generated="never" lazy="false" name="signatureHtml"
			type="text">
			<column name="uce_firma_adjunta_html" />
		</property>
		<property generated="never" lazy="false" name="ingoingServerType"
			type="string">
			<column   name="tipo_servidor_entrada">
				<comment>defecto POP</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="ingoingServerName"
			type="string">
			<column   name="nombre_del_servidor_entrada" />
		</property>
		<property generated="never" lazy="false" name="ingoingServerPort"
			type="java.lang.Integer">
			<column name="puerto_entrada" not-null="true" />
		</property>
		<property generated="never" lazy="false" name="ingoingConnectionSecurity"
			type="string">
			<column   name="seguridad_conexion" not-null="true">
				<comment>Ninguna, SATRTTLS</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="ingoingAuthenticationMethod"
			type="string">
			<column   name="metodo_identificacion" not-null="true">
				<comment>Contrase</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="formato" type="string">
			<column   name="formato" not-null="true">
				<comment>Texto, HTML</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="outgoingServerName"
			type="string">
			<column   name="nombre_servidor_de_salida">
				<comment>Nombre del servidor de salida</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="outgoingServer"
			type="string">
			<column   name="servidor_de_salida">
				<comment>id del servidor de salida . por ej: smtp.softpoint.org</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="outgoingServerPort"
			type="java.lang.Integer">
			<column name="puerto_salida" not-null="true">
				<comment>Predeterminado 25</comment>
			</column>
		</property>
		<property generated="never" lazy="false"
			name="outgoingConnectionSecurity" type="string">
			<column   name="seguridad_de_la_conexion_salida">
				<comment>Ninguna, STARTTLS, SSL/TLS</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="outgoingConnectionMethod"
			type="string">
			<column   name="metodo_identificacion_salida">
				<comment>"S"in identificacion, "I"ontrase</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="user"
			type="string">
			<column   name="nombre_usuario_salida" />
		</property>
		<property generated="never" lazy="false" name="password"
			type="string">
			<column   name="contrasenia_salida">
				<comment>para las cuentas no riesgosas para poner la contrase</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="accountWithoutValidation"
			type="java.lang.Boolean">
			<column name="cuenta_sin_validacion" sql-type="bit">
				<comment>indica si el correo saliente no precisa de password y no hace falta para enviar emails</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="idExchange"
			type="string">
			<column  name="id_exchange">
				<comment>por las dudas para conectarnos con exchange ...</comment>
			</column>
		</property>
        <property name="addDate" type="org.jadira.usertype.dateandtime.joda.PersistentDateTime">
            <column name="add_date"/>
        </property>
        <property name="addUser" type="java.lang.Integer">
            <column name="add_user" />
        </property>
        <property name="modDate" type="org.jadira.usertype.dateandtime.joda.PersistentDateTime">
            <column name="mod_date"/>
        </property>
        <property name="modUser" type="java.lang.Integer">
            <column name="mod_user" />
        </property>
	</class>	

</hibernate-mapping>
